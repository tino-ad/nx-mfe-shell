{
  "name": "nx-mfe-shell",
  "version": "0.1.0",
  "private": true,
  "description": "Nx workspace hosting an Angular standalone micro-frontend shell (client-app).",
  "scripts": {
    "start": "nx serve client-app",
    "build": "nx build client-app",
    "build:prod": "nx build client-app --configuration=production",
    "test": "nx test client-app",
    "lint": "nx lint client-app",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "affected:graph": "nx graph",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs,json,css,scss,html,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@nx/angular": "^19.0.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "^0.14.0"
  },
  "devDependencies": {
    "nx": "^19.0.0",
    "typescript": "^5.5.4",
    "@types/node": "^20.12.12",
    "eslint": "^9.5.0",
    "@eslint/js": "^9.5.0",
    "typescript-eslint": "^8.0.0",
    "prettier": "^3.3.2",
    "@nx/eslint": "^19.0.0",
    "@nx/jest": "^19.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "jest-environment-jsdom": "^29.7.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "engines": {
    "node": ">=18.19.0"
  }
}